{
    "name": "JA/EN Url Toggler",
    "manifest_version": 3,
    "version": "0.2",
    "description": "URL に含まれる言語コード（ja-JP/en-US）をワンクリックで切り替えます。",
    "default_locale": "ja",
    "permissions": [
      "activeTab",
      "webNavigation"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {            
      "16": "images/icon16.png", 
      "24": "images/icon24.png", 
      "36": "images/icon36.png",
      "128": "images/icon128.png"
    },
    "action": {
        "default_icon": {            
          "16": "images/icon16.png", 
          "24": "images/icon24.png", 
          "36": "images/icon36.png",
          "128": "images/icon128.png"
        },
        "default_title": "Toggle Language"
    }
  }
